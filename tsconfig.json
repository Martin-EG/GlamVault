{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/Features/*": ["./src/features/*"],
      "@/GlamUI": ["./src/GlamUI/index.ts"],
      "@/GlamUI/components/*": ["./src/GlamUI/components/*"],
      "@/Hooks/*": ["./src/hooks/*"],
      "@/Lib/*": ["./src/lib/*"],
      "@/Providers/*": ["./src/providers/*"]
    },
    "types": ["jest", "@testing-library/jest-dom"]
  },
  "include": [
    "next-env.d.ts",
    "styled-components.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mts",
    "**/*.d.ts",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
