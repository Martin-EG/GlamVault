{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "Node16",
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/Components/*": [
        "./src/components/*"
      ],
      "@/GlamUI": [
        "./src/GlamUI/index.ts"
      ],
      "@/GlamUI/components/*": [
        "./src/GlamUI/components/*"
      ],
      "@/Features/*": [
        "./src/features/*"
      ],
      "@/Providers/*": [
        "./src/providers/*"
      ],
    }
  },
  "include": [
    "next-env.d.ts",
    "styled-components.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mts",
    "**/*.d.ts",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}